template header
threshold
message

package rules.template
import com.ftn.sbnz.model.models.Machine;
import com.ftn.sbnz.model.models.DroolsLog;

template "Machine temperature alert"
rule "High temperature alert @{row.rowNumber}"
when
    $m : Machine( temperature > @{threshold} )
then
    DroolsLog.log("Template Rule: Machine " + $m.getName() + " - @{message}");
end
end template
